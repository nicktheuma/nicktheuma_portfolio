# Public media origin used by the website at runtime.
# Example:
# VITE_MEDIA_BASE_URL=https://media.nicktheuma.com
VITE_MEDIA_BASE_URL=

# Cloudflare R2 credentials for sync script.
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=

# Optional object prefix inside the bucket (defaults to "media")
R2_BUCKET_PREFIX=media

# Optional: set true to remove remote files that no longer exist locally.
R2_DELETE_MISSING=false

# Optional test mode: sync only one file relative to public/media (example below)
# R2_TEST_FILE=projects/Carisma_Gems/to post/1.png
R2_TEST_FILE=

# Optional test mode: sync only the first discovered file
R2_TEST_FIRST=false

# Optional progress logging frequency for large syncs
R2_PROGRESS_EVERY=25
